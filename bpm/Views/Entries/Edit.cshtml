@model bpm.Models.Entry

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="DateEntered" />
            <div class="form-group">
                <label asp-for="Systolic" class="control-label"></label>
                <input asp-for="Systolic" class="form-control" />
                <span asp-validation-for="Systolic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Diastolic" class="control-label"></label>
                <input asp-for="Diastolic" class="form-control" />
                <span asp-validation-for="Diastolic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pulse" class="control-label"></label>
                <input asp-for="Pulse" class="form-control" />
                <span asp-validation-for="Pulse" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Weight" class="control-label"></label>
                <input asp-for="Weight" class="form-control" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notes" class="control-label"></label>
                <textarea asp-for="Notes" class="form-control"></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApplicationUserId" class="control-label"></label>
                <input type="hidden" asp-for="ApplicationUserId" class="form-control" asp-items="ViewBag.ApplicationUserId" />
                <span asp-validation-for="ApplicationUserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-outline-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a> |
    <a asp-action="Delete" asp-route-id="Id" class="text-danger">Delete Entry</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
